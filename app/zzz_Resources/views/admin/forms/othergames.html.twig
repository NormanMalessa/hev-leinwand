{% extends 'admin/edit.html.twig' %}

{% block body_content %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success js-flash">{{ message }}</div>
    {% endfor %}
    {{ form_start(form) }}

        {% for i in 1..8 %}
        <div class="form-group">
            <div class="col-sm-3">
                {{ form_widget(form.children['home_' ~ i]) }}
            </div>
            <div class="col-sm-2">
                {{ form_widget(form.children['scorehome_' ~ i]) }}
            </div>
            <div class="col-sm-2">
                {{ form_widget(form.children['scoreaway_' ~ i]) }}
            </div>
            <div class="col-sm-3">
                {{ form_widget(form.children['away_' ~ i]) }}
            </div>
            <div class="col-sm-1">
                {{ form_widget(form.children['finished_' ~ i]) }}
            </div>
        </div>
        {% endfor %}

        <div class="form-group">
            <div class="col-sm-12">
                {{ form_widget(form.save) }}
            </div>
        </div>

        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}