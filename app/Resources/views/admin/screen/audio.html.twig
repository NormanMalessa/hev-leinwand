{% extends 'admin/base.html.twig' %}

{% block body_content %}
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active show" data-toggle="tab" href="#tab-audio-track" role="tab">
                <i class="far fa-play-circle"></i> Musik</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#tab-audio-settings" role="tab">
