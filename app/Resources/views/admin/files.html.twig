{% extends 'admin/base.html.twig' %}
{% import "admin/macro/bytesToSize.html.twig" as bytes %}

{% block body_content %}
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Datei</th>
                <th>Größe</th>
                <th>Aktion</th>
            </tr>
        </thead>
        <tbody>
            {% for file in files %}
            <tr>
                <td>{{ file.getFileName }}</td>
                <td>{{ bytes.bytesToSize(file.getSize) }}</td>
                <td><a href="{{ path('admin.files.delete', {filename: file.getFileName}) }}" class="btn btn-default"><i class="fa fa-trash"></i></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

    {{ form_start(form) }}
        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}