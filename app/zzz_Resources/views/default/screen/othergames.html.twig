<section class="othergames" data-background="{{ asset('img/bg.png') }}" data-fullscreen>
    <div class="greenbg caption" id="caption">Zwischenst√§nde</div>
    <table>
        <tbody>
        {% for i in 1..8 %}
            {% set hometeam = attribute(_context, 'home_' ~ i) %}
            {% set homescore = attribute(_context, 'scorehome_' ~ i) | default('0') %}
            {% set awayscore = attribute(_context, 'scoreaway_' ~ i) | default('0') %}
            {% set awayteam = attribute(_context, 'away_' ~ i) %}
            {% set finished = attribute(_context, 'finished_' ~ i) %}

            {% if hometeam is not null and awayteam is not null %}
                <tr>
                    <td>
                        <img id="home_{{ i }}_logo" align="left" data-src="https://www.herner-ev.com/components/com_hockeymanager_clubs/assets/img/cache/50x50/{{ hometeam.logo }}" width="50" height="50">
                        <span id="home_{{ i }}_name">{% if 'herne' in hometeam.name | lower %}<b>{% endif %}{{ hometeam.name }}{% if 'herne' in hometeam.name | lower %}</b>{% endif %}</span>
                    </td>
                    <td align="center">
                        <h3 {% if finished %}class="finished"{% endif %}><span id="home_{{ i }}_score">{{ homescore }}</span>:<span id="away_{{ i }}_score">{{ awayscore }}</span></h3>
                    </td>
                    <td align="right">
                        <img id="away_{{ i }}_logo" align="right" data-src="https://www.herner-ev.com/components/com_hockeymanager_clubs/assets/img/cache/50x50/{{ awayteam.logo }}" width="50" height="50">
                        <span id="away_{{ i }}_name">{% if 'herne' in awayteam.name | lower %}<b>{% endif %}{{ awayteam.name }}{% if 'herne' in awayteam.name | lower %}</b>{% endif %}</span>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
</section>