{% extends 'admin/base.html.twig' %}

{% block body_content %}
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active show" data-toggle="tab" href="#tab-effects" role="tab">
                <i class="far fa-list-alt"></i> Screens</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active show" id="tab-effects" role="tabpanel">
            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Typ</th>
                    <th>Aktion</th>
                </tr>
                </thead>
                <tbody>
                    {% for screen in screens %}
                        <tr>
                            <td>{{ screen.name }}</td>
                            <td>{{ screen.screenType }}</td>
                            <td>
                                <a href="#TODO">
                                    <button class="btn btn-light"><i class="fa fa-edit"></i></button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}