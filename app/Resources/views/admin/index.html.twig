{% extends 'admin/base.html.twig' %}

{% block body_content %}
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Active</th>
        </tr>
        </thead>
        <tbody>
        {% for screen in screens %}
            <tr>
                <td>
                    <a href="{{ path('admin.edit', { id: screen.id }) }}" title="edit">
                        <i class="fa fa-wrench"></i> {{ screen.name }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin.activate', { id: screen.id }) }}" class="js-activate" title="activate">
                        <button type="button" class="btn btn-{% if screen.active %}default{% else %}success{% endif %}"><i class="fa fa-desktop"></i></button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}