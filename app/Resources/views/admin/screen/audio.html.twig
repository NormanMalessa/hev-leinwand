        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active show" id="tab-audio-track" role="tabpanel" data-track="{{ track }}">{# React #}</div> {# @TODO use data-attribute? #}
        <div class="tab-pane" id="tab-audio-settings" role="tabpanel" data-volume="{{ volume }}">{# React #}</div> {# @TODO use data-attribute? #}
    </div>
{% endblock %}